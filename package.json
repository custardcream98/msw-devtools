{
  "$schema": "https://json.schemastore.org/package",
  "name": "msw-devtools",
  "scripts": {
    "format": "prettier --write .",
    "lint": "pnpm --filter \"./{packages,apps}/**\" lint",
    "lint:fix": "pnpm --filter \"./{packages,apps}/**\" lint:fix",
    "type-check": "pnpm --filter \"./{packages,apps}/**\" type-check",
    "prepare": "husky",
    "build:package": "pnpm --filter @custardcream/msw-devtools build",
    "build:package:watch": "pnpm --filter @custardcream/msw-devtools build:watch",
    "build:playground": "pnpm build:package && pnpm --filter playground build",
    "dev": "concurrently -k -s first -n \"PACKAGE,PLAYGROUND\" -c \"magenta,blue\" \"NODE_ENV=development pnpm build:package:watch\" \"pnpm --filter playground dev\"",
    "ci:version": "pnpm changeset version",
    "ci:publish": "pnpm lint && pnpm type-check && pnpm build:package && pnpm changeset publish",
    "ci:check": "pnpm lint && pnpm type-check"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "concurrently": "^9.0.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  }
}
